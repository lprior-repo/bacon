{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "main"
  },
  "targetDefaults": {
    "build": {
      "cache": true,
      "inputs": [
        "production",
        "^production",
        "{projectRoot}/**/*.go",
        "{projectRoot}/go.mod",
        "{projectRoot}/go.sum"
      ],
      "outputs": [
        "{projectRoot}/main",
        "{projectRoot}/dist",
        "{projectRoot}/.aws-sam"
      ],
      "executor": "nx:run-commands"
    },
    "test": {
      "cache": true,
      "inputs": [
        "default",
        "^production"
      ],
      "outputs": [
        "{projectRoot}/coverage"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "go test -v -race -short ./...",
        "cwd": "{projectRoot}"
      },
      "configurations": {
        "root": {
          "command": "mage testunit",
          "cwd": "{projectRoot}"
        }
      }
    },
    "lint": {
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/.golangci.yml"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "golangci-lint run ./...",
        "cwd": "{projectRoot}"
      },
      "configurations": {
        "root": {
          "command": "mage lint",
          "cwd": "{projectRoot}"
        }
      }
    },
    "mod-tidy": {
      "cache": true,
      "inputs": [
        "{projectRoot}/go.mod",
        "{projectRoot}/go.sum"
      ],
      "outputs": [
        "{projectRoot}/go.sum"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "go mod tidy",
        "cwd": "{projectRoot}"
      }
    },
    "initialize": {
      "cache": true,
      "inputs": [
        "{projectRoot}/**/*.tf"
      ],
      "outputs": [
        "{projectRoot}/.terraform",
        "{projectRoot}/.terraform.lock.hcl"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "terraform init",
        "cwd": "{projectRoot}"
      }
    },
    "providers": {
      "cache": true,
      "inputs": [
        "{projectRoot}/**/*.tf"
      ],
      "outputs": [
        "{projectRoot}/.terraform/providers"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "terraform providers",
        "cwd": "{projectRoot}"
      }
    },
    "validate": {
      "cache": true,
      "inputs": [
        "{projectRoot}/**/*.tf",
        "{projectRoot}/**/*.tfvars"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "terraform validate",
        "cwd": "{projectRoot}"
      }
    },
    "plan": {
      "cache": true,
      "inputs": [
        "{projectRoot}/**/*.tf",
        "{projectRoot}/**/*.tfvars"
      ],
      "outputs": [
        "{projectRoot}/terraform.tfplan"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "terraform plan -out=terraform.tfplan",
        "cwd": "{projectRoot}"
      }
    },
    "apply": {
      "cache": false,
      "dependsOn": ["plan"],
      "executor": "nx:run-commands",
      "options": {
        "command": "terraform apply terraform.tfplan",
        "cwd": "{projectRoot}"
      }
    },
    "destroy": {
      "cache": false,
      "executor": "nx:run-commands",
      "options": {
        "command": "terraform destroy -auto-approve",
        "cwd": "{projectRoot}"
      }
    },
    "format": {
      "cache": true,
      "inputs": [
        "{projectRoot}/**/*.tf"
      ],
      "outputs": [
        "{projectRoot}/**/*.tf"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "terraform fmt -recursive",
        "cwd": "{projectRoot}"
      }
    },
    "format-check": {
      "cache": true,
      "inputs": [
        "{projectRoot}/**/*.tf"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "terraform fmt -check -recursive",
        "cwd": "{projectRoot}"
      }
    },
    "security-scan": {
      "cache": true,
      "inputs": [
        "{projectRoot}/**/*.tf",
        "{projectRoot}/**/*.tfvars"
      ],
      "outputs": [
        "{projectRoot}/checkov-report.json"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "checkov -d . --framework terraform --output cli --quiet",
        "cwd": "{projectRoot}"
      }
    },
    "terraform-plan": {
      "cache": true,
      "inputs": [
        "{projectRoot}/**/*.tf",
        "{projectRoot}/**/*.tfvars"
      ],
      "outputs": [
        "{projectRoot}/terraform.tfplan"
      ],
      "executor": "nx:run-commands",
      "options": {
        "command": "terraform plan -out=terraform.tfplan",
        "cwd": "{projectRoot}"
      }
    },
    "terraform-apply": {
      "cache": false,
      "dependsOn": ["terraform-plan"],
      "executor": "nx:run-commands",
      "options": {
        "command": "terraform apply terraform.tfplan",
        "cwd": "{projectRoot}"
      }
    },
    "test-mutation": {
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{projectRoot}/**/*.go",
        "{projectRoot}/**/*_test.go"
      ],
      "outputs": [
        "{projectRoot}/mutation-results"
      ],
      "dependsOn": ["test"]
    },
    "test-mutation-module": {
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{projectRoot}/**/*.go",
        "{projectRoot}/**/*_test.go"
      ],
      "outputs": [
        "{projectRoot}/mutation-results"
      ],
      "dependsOn": ["test"]
    }
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/**/*_test.go",
      "!{projectRoot}/**/testdata/**/*"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/go.mod",
      "{workspaceRoot}/go.sum",
      "{workspaceRoot}/magefile.go"
    ]
  },
  "plugins": [],
  "workspaceLayout": {
    "projectNameAndRootFormat": "as-provided"
  },
  "cli": {
    "analytics": false
  },
  "defaultBase": "main",
  "parallel": 10,
  "cacheDirectory": ".nx/cache",
  "useDaemonProcess": true,
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test", "lint", "mod-tidy", "initialize", "providers", "validate", "plan", "terraform-plan", "format", "format-check", "security-scan", "test-mutation", "test-mutation-module"],
        "parallel": true,
        "maxParallel": 10,
        "captureStderr": true,
        "skipNxCache": false,
        "runtimeCacheInputs": ["node -v", "go version"]
      }
    }
  }
}